<head><script src="https://kit.fontawesome.com/c3f6f3c4db.js" crossorigin="anonymous"></script></head>
<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <% unless current_admin.present? %>
    <%= link_to users_dash_boards_path, class:"brand-link", method: :get do %>
      <%= image_tag "AdminLTELogo.png", class:"brand-image img-circle elevation-3 brand_link", style: "opacity: .8" %>
      <span class="brand-text font-weight-light">TecPutt</span>
    <% end %>
  <% else %>
    <div class="brand-link">
      <%= image_tag "AdminLTELogo.png", class:"brand-image img-circle elevation-3", style: "opacity: .8" %>
      <span class="brand-text font-weight-light">TecPutt</span>
    </div>
  <% end %>
  <!-- Sidebar -->
  <% unless current_admin.present? %>
  <div class="sidebar">
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to users_learnings_path, class:"nav-link", method: :get do %>
            <i class="nav-icon fa-sharp fa-solid fa-book-open"></i> 
            <p>
              e-learning
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_articles_path, class:"nav-link", method: :get do %>
            <i class="nav-icon fas fa-newspaper"></i>
            <p>
              記事一覧
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_profiles_path, class:"nav-link", method: :get do %>
            <i class="nav-icon fas fa-address-card"></i>
            <p>
              プロフィール一覧
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_posts_path, class:"nav-link", method: :get do %>
            <i class="nav-icon fa-brands fa-youtube"></i>
            <p>
              動画投稿一覧
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_tweets_path, class:"nav-link", method: :get do %>
            <i class="nav-icon fa-brands fa-twitter"></i> 
            <p>
              つぶやき一覧
              <% if @comment_notifications.present? %>
                <% if @comment_notifications.count > 0 %>
                  <span class="badge rounded-pill badge-success"><%= @comment_notifications.count %></span> <%# コメント通知件数をバッジ通知する %>
                <% end %>
              <% end %>
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_users_inquiry_path, class:"nav-link", method: :get do %>
            <i class="fa-solid fa-circle-info"></i>
            <p>
              問い合わせ
            </p>
          <% end %>
        </li>
      </ul>
    </nav>    
  </div>
  <% end %>
</aside>
