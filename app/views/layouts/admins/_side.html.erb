<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <%= link_to admins_dash_boards_path, class:"brand-link" do %>
    <%= image_tag "AdminLTELogo.png", class:"brand-image img-circle elevation-3", style: "opacity: .8" %>
    <span class="brand-text font-weight-light">ネイテク管理画面</span>
  <% end %>
  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
      </div>
      <div class="info">
        <%= link_to current_admin.name, edit_admin_registration_url, class:"d-block" %>
      </div>
    </div>
    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to admins_dash_boards_path, class:"nav-link" do %>
            <i class="nav-icon fas fa-th"></i>
            <p>
              投稿記事一覧
            </p>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to admins_profiles_path, class:"nav-link", method: :get do  %>
            <i class="nav-icon fas fa-list"></i>
            <p>
              登録ユーザー一覧
            </p>
          <% end %>
        </li>
      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
