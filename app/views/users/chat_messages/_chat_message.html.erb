<div class="chat-messages-container">
  <% if chat_message.user.id != current_user.id %>
    <div class="chat-message-partner">
      <% if @chat_room_user.profile.image.persisted? %>
        <%= image_tag chat_message.user.profile&.image, class: "chat-room-partner-img" %>
      <% else %>
        <div class="chat-room-partner-default-img"></div>
      <% end %>

      <div class="chat-message-content"><%= chat_message.content %></div>
    </div>
  <% else %>
    <div class="chat-message-current-user">
      <div class="chat-message-content main-color-bg"><%= chat_message.content %></div>
    </div>
  <% end %>
</div>
