<%= javascript_pack_tag "users/articles_show" %>
<% provide(:title,  "記事詳細") %>
<div class="container">
  <div class="row">
    <% if @article.user_id == current_user.id %>
      <div class="d-flex col-10 justify-content-end">
        <%= link_to "編集", edit_users_article_path, class: "btn btn-success" %>
        <%= link_to "削除", users_article_path, method: :delete, data: {confirm: "記事#{@article.id}を削除します。"}, class: "btn btn-danger ml-2" %>
      </div>
    <% end %>

    <div class="col-10">
      <div class="col-8 float-left mb-1" style="display: inline;">
        <h1 class="text-left offset-2 mr-3" style="display: inline;"><%= @article.title %></h1>〜<%= @article.sub_title %>〜
      </div>
      <% if @article.user_id != current_user.id %>
        <div class="mt-3">
          書き手：<%= User.find(@article.user_id).name %>
        </div>
      <% end %>
    </div>
    <hr class="mx-4" size="5" style="width: 95%;">
    <%# <div class="col-8 offset-2 markdown-preview"> %>
    <div class="col-10 offset-1 article-view" data-article="<%= @article.content %>">
      <%# @article.content %>
      <%# simple_format(@article.content) %>
    </div>

  </div>
</div>