<% if current_user != @article.user %>
  <% if current_user.following?(@user) %>
    <%= link_to "フォローを外す", users_user_relationships_path(user_id: @user.id), method: :delete %>
  <% else %>
    <%= link_to "フォローをする", users_user_relationships_path(user_id: @user.id), method: :post %>  
  <% end %>
<% end %>
