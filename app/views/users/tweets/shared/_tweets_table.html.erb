<div class="content">
  <div class="container">
    <% @tweets.each do |tweet| %>
      <div class="tweets-index-item">
        <div class="fw-bold">
          <%= tweet.user.name %>
            <span style="margin-right: 1em;"></span>
          <%= tweet.user.created_at.strftime("%Y年%m月%d日").to_s %>
        </div>
      </div>
    <div class="row">
      <div class="col-12">
        <table class= "table table-borderless">
          <td class="text-wrap col-6" style="width: 28rem;">
            <%= tweet.post %>
          </td>
          
          <td class="col-6"> 
            <span style="margin-right: 1em;"></span>
            <% if tweet.user.name == current_user.name %>
            <button class="btn" data-bs-toggle="dropdown" style="width: 66.5px" >︙</button>
            <ul class="dropdown-menu">
              <li><%= link_to '編集', "#", class:"nav-link" %></li>
              <li><%= link_to '削除', "#", method: :delete, data: { confirm: 'Are you sure?' }, class:"nav-link" %></li>
            </ul>
            <% end %>            
          </td>
                           
        </table>
      </div>
    </div>
    <% end %>
  </div>
</div>
