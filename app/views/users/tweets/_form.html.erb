<%= form_with model: @tweet, url: users_tweets_path, method: :post, local: true do |form| %>
  <div style="text-align:center;">
    <%= render 'layouts/error_messages', model: form.object %>
    <div class="field">
      <%= form.label :post, "#{yield(:label_text)}", class: "tweet-form" %><br>
      <%= form.text_area :post, id:"tweet_post", size: "50x5" %>
    </div>
    <div class="actions">
      <br><%= form.submit "#{yield(:btn_text)}", class: "btn btn-lg btn-primary" %>
      <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-bs-dismiss="modal">
        キャンセル
      </button>      
    </div>
  </div>
<% end %>
