<%= form_with model: @tweet, url: users_tweets_path, method: :post, local: true do |form| %>
  <div style="text-align:center;">
    <%= render 'layouts/error_messages', model: form.object %>
    <div class="field">
      <%= form.label :post, "投稿を作成", class: "tweet-form" %><br>
      <%= form.text_area :post, id:"tweet_post", size: "50x5" %>
    </div>
    <div class="actions">
      <br><%= form.submit "投稿する", class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
