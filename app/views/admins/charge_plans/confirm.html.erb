<div class="text-center"><h2>確認画面</h2></div>

  <div class="field mt-5">
    <p>受講料: <%= @charge_plan.price %></p>
  </div>
  <div class="field mt-3">
    <p>参加人数: <%= @charge_plan.quantity %></p>
  </div>
  <div class="field mt-3">
    <p>料金体系: <%= @charge_plan.charge_type %></p>
  </div>
  <div class="field mt-3">
    <p>合計金額: <%= amount_calc(@charge_plan.price, @charge_plan.quantity) %></p>
    <!-- <%= @charge_plan.amount %> -->
  </div>

<%= form_with model: @charge_plan, url: admins_charge_plans_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :price %>
  <%= f.hidden_field :quantity %>
  <%= f.hidden_field :charge_type %>
  <%= f.hidden_field :amount, value: amount_calc(@charge_plan.price, @charge_plan.quantity) %>
  <%= f.submit "保存する", class: 'mt-3' %>
<% end %>

<%= form_with model: @charge_plan, url: back_admins_charge_plans_path, method: :new, local: true do |f| %>
  <%= f.hidden_field :price %>
  <%= f.hidden_field :quantity %>
  <%= f.hidden_field :charge_type %>
  <%= f.submit '入力画面に戻る' %>
<% end %>
