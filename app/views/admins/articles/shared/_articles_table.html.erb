<div class="content">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <table class="table table-hover articles-table">
          <thead>
            <tr>
              <th class="px-5"><%= Article.human_attribute_name(:title) %></th>
              <th class="px-5"><%= Article.human_attribute_name(:sub_title) %></th>
              <th class="px-5"><%= Article.human_attribute_name(:user) %></th>
              <th class="px-5"><%= Article.human_attribute_name(:created_at) %></th>
            </tr>
          </thead>
          <tbody>
            <% if @articles.exists? %>
              <% @articles.each do |a| %>
                <tr class="link-tr" onclick='window.location="<%= users_article_path(a.id) %>"'>
                  <td><%= a.title %></td>
                  <td><%= a.sub_title %></td>
                  <td><%= a.user.name %></td>
                  <td><%= l(a.created_at, format: :long) %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="100" class="text-center py-5">投稿なし</tr>
              </tr>                
            <% end %>
          </tbody>
        </table>
        <%= paginate @articles, theme: 'bootstrap-5' %>        
      </div>
    </div>
  </div>
</div>
