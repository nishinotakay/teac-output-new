<div class="content">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <table class="table table-hover articles-table">
          <thead>
            <tr>
              <th class="px-5">タイトル</th>
              <th class="px-5">サブタイトル</th>
              <th class="px-5">投稿者</th>
              <th class="px-5">投稿日</th>
            </tr>
          </thead>
          <tbody>
            <% if @articles.exists? %>
              <% @articles.each do |a| %>
                <tr class="link-tr" onclick='window.location="<%= users_article_path(a.id) %>"'>
                  <td><%= a.title %></td>
                  <td><%= a.sub_title %></td>
                  <td><%= a.user.name %></td>
                  <td><%= l(a.created_at, format: :long) %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="100" class="text-center py-5">投稿なし</tr>
              </tr>                
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
