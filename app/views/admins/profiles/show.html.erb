<%= javascript_pack_tag "users/profiles" %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<% provide(:title,  "プロフィール") %>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <%= link_to "編集", edit_admins_profile_path, class:"btn btn-default" %>
        <%= link_to "削除", admins_profile_path(@profile), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
        <div class="row">
          <div class="col-md-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">About Me</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <div class="user-about">
                  <!-- <strong>プロフィール画像</strong> -->
                  <% if @profile.image.attached? %>
                    <div class="image">
                      <p class="text-muted"><%= image_tag @profile.image %></p>
                    </div>
                  <% end %>
                  <div class="profile">
                    <div class="name-history>">
                      <!-- <div class="nickname">ニックネーム</div> -->

                      <p class="text-muted"><%= @profile.name %></p>

                      <hr>
                      <div class="learning-history-day">学習歴（月）</div>

                      <td><%= @sa.to_i/60/60/24/30+1 %>ヶ月</td>

                      <hr>

                      <div class="purpose">プログラミング学習の目的</div>

                      <p class="text-muted"><%= @profile.purpose %></p>
                    </div>
                  </div>
                </div>
                
              </div>
            </div>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
